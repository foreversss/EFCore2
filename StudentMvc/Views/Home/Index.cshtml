
@model IEnumerable<Student>
@{
    ViewBag.Title = "学生列表";
}

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>学生编号</th>
                <th>学生名称</th>
                <th>学生邮箱</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Mailbox</td>
                    <td>
                        <a asp-controller="Home" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-success btn-sm active" role="button">修改</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger  btn-sm active" role="button">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
