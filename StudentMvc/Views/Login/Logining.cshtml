

@model Users
@{
    ViewData["Title"] = "登录页面";
}
    <form method="post" asp-controller="Login" asp-action="Logining">
        <div class="form-group row">
            <label class="col-sm-2 control-label" asp-for="UserName"></label>
            <div class="col-sm-10">
                <span asp-validation-for="UserName"  class="text-danger"></span>
                <input asp-for="UserName" class="form-control" placeholder="请输入用户名">
            </div>
        </div>
        <div class="form-group row"> 
            <label class="col-sm-2 control-label" asp-for="PassWord"></label>
            <div class="col-sm-10">
                <span asp-validation-for="PassWord" class="text-danger"></span>
                <input type="password" asp-for="PassWord" class="form-control" placeholder="请输入密码">
            </div>
        </div>    
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-12">
                <button type="submit" class="btn btn-primary">登陆</button>
            </div>
        </div>
    </form>


